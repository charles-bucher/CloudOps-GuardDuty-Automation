# ==============================================
# GuardDuty Automation Configuration Example
# Copy this to terraform.tfvars and customize
# ==============================================

# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Resource Naming
name = "guardduty-automation"

# Alert Configuration
alert_email = "your-email@example.com"  # CHANGE THIS!
alert_phone = ""                         # Optional: +12025551234

# GuardDuty Features
enable_s3_protection         = true   # Monitor S3 buckets
enable_kubernetes_protection = false  # Enable if using EKS
enable_malware_protection    = false  # Costs $0.30/GB scanned

# Alert Preferences
alert_on_medium_severity     = true   # Log severity 4.0-6.9
finding_publishing_frequency = "FIFTEEN_MINUTES"  # or ONE_HOUR, SIX_HOURS

# Automated Response
enable_lambda_response = false  # Enable for auto-remediation

# Logging
log_retention_days = 30  # CloudWatch log retention

# Additional Tags (optional)
tags = {
  Project    = "SecurityAutomation"
  Owner      = "CharlesBucher"
  CostCenter = "Security"
}
